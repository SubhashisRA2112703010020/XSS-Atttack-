<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SamDev Shopping</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <style>
      .background-image {
        background: linear-gradient(to bottom right, #3b82f6, #ec4899);
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        opacity: 0.9;
      }

      .products ul {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1rem;
        padding: 1rem;
      }

      .products li {
        background-color: white;
        border-radius: 10px;
        padding: 1rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
      }

      .products li:hover {
        transform: scale(1.05);
      }

      .products img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 10px;
        margin-bottom: 1rem;
      }

      .products h3 {
        font-size: 1.2rem;
        color: #333;
        margin-bottom: 0.5rem;
      }

      .products p {
        font-size: 1rem;
        color: #666;
      }

      .products-header {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 2rem;
        text-align: center;
        color: white;
      }
    </style>
  </head>
  <body class="flex flex-col items-center justify-start min-h-screen relative">
    <div class="background-image"></div>
    <div class="text-center bg-white p-8 rounded-lg shadow-lg z-10 mt-8">
      <h1 class="text-4xl font-bold mb-8 text-gray-800">SamDev Shopping</h1>
      <form class="mb-8" onsubmit="searchProductsByName()">
        <label for="search" class="block text-lg font-medium mb-2 text-gray-700"
          >Enter a search term:</label
        >
        <div class="flex justify-center">
          <input
            type="text"
            id="search"
            name="search"
            class="border border-gray-300 p-2 w-64 rounded-l-lg"
          />
          <button
            type="button"
            class="bg-yellow-500 text-white p-2 rounded-r-lg"
            onclick="searchProductsByName()"
            onsubmit="searchProductsByName()"
          >
            Search
          </button>
        </div>
      </form>
      <div
        class="border border-gray-300 p-4 w-64 mx-auto bg-gray-100 rounded-lg"
      >
        <p class="text-lg font-medium text-gray-700">Search results for:</p>
      </div>
    </div>

    <!-- Products Section -->
    <section class="products mt-8 w-full max-w-4xl z-10">
      <div class="content">
        <h2 class="products-header">Featured Products</h2>
        <ul>
          <% products.forEach(product => { %>
          <li>
            <img src="<%= product.image %>" alt="<%= product.title %>" />
            <h3><%= product.title %></h3>
            <p><%= product.category.toUpperCase() %></p>
            <p><%= `$${product.price}` %></p>
          </li>
          <% }) %>
        </ul>
      </div>
    </section>
  </body>
</html>
