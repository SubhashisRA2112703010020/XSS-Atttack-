<html>
  <head>
    <title>Basic Reflected XSS Lab</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="flex items-center justify-center min-h-screen bg-white">
    <div class="text-center">
      <h1 class="text-2xl font-bold mb-6">Basic Reflected XSS Lab</h1>
      <form class="mb-4">
        <label for="search" class="block text-lg font-medium mb-2"
          >Enter a search term:</label
        >
        <div class="flex justify-center">
          <input
            type="text"
            id="search"
            name="search"
            class="border border-gray-300 p-2 w-64"
          />
          <button type="submit" class="bg-gray-800 text-white p-2 ml-2">
            Search
          </button>
        </div>
      </form>
      <div class="border border-gray-300 p-4 w-64 mx-auto">
        <p class="text-lg font-medium">Search results for:</p>
      </div>
    </div>
  </body>
</html>
