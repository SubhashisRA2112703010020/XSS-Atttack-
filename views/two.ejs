<html>
  <head>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-800 flex items-center justify-center min-h-screen">
    <div class="text-center">
      <h1 class="text-white text-3xl mb-6">Basic Stored XSS Lab</h1>
      <form class="mb-6">
        <label for="comment" class="text-white block mb-2"
          >Leave a comment:</label
        >
        <textarea
          id="comment"
          name="comment"
          rows="4"
          class="w-full max-w-md p-2 rounded border border-gray-300"
        ></textarea>
        <button
          type="submit"
          class="mt-4 px-4 py-2 bg-gray-600 text-white rounded"
        >
          Submit
        </button>
      </form>
      <div class="text-left text-white">
        <h2 class="text-xl">Comments:</h2>
      </div>
    </div>
  </body>
</html>
